// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id        Int      @id @default(autoincrement())
  descricao String
  concluida Boolean  @default(false)
  criadaEm  DateTime @default(now())
}
 