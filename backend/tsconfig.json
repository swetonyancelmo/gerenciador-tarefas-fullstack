{
  "compilerOptions": {
    "target": "ES2020", // Versão do JS que será gerada
    "module": "commonjs", // Sistema de módulos do Node
    "outDir": "./dist", // Onde o JS compilado irá ficar
    "rootDir": "./src", // Onde nosso código TS fonte irá ficar
    "strict": true, // Habilita várias checagens de tipo (boa prática)
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"] // O que o TS deve compilar
}